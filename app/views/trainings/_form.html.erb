<%= form_with(model: training) do |form| %>
  <% if training.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(training.errors.count, "error") %> prohibited this training from being saved:</h2>

      <ul>
        <% training.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, @categories, :id, :title, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :crop_id %>
    <%= form.collection_select :crop_id, @crops, :id, :title, include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit "登録する" %>
  </div>
<% end %>
