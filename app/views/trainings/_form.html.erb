<%= form_with(model: training) do |form| %>
  <% if training.errors.any? %>
    <div id="error_explanation">
    <h2>入力内容に誤りがあるため送信することが出来ませんでした。</h2>
      <ul>
        <% training.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, class: 'form-label' %>
    <br>
    <%= form.text_field :title, class: 'form-label', size: "40" %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <br>
    <%= form.collection_select :category_id, @categories, :id, :title, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :crop %>
    <br>
    <%= form.collection_select :crop_id, @crops, :id, :title, include_blank: true %>
  </div>

  <div class="form-group">
    <%= form.label :content, class: 'form-label' %>
    <br>
    <%= form.text_area :content, class: 'form-label', size: "65x5" %>
  </div>

  <div class="actions text-center mt-3">
    <%= form.submit "送信する", class: 'btn btn-primary' %>
  </div>
<% end %>
