<p id="notice"><%= notice %></p>

<div class="headline mt-4" style="width: 25rem; background-color: #df4c4c;">
  <h3 class="text-center">トレーニングデータ一覧</h3>
</div>

<%= form_with(url: trainings_path, method: :get, local: true, html: { class: 'search-form mt-3' }) do |form| %>
  <table class="table search-table" style="text-align: center; width: 800px;">
    <tr>
    <td>
        <%= form.label :title, "タイトル", class: 'form-label mr-2' %>
        <%= form.text_field :title, class: 'form-control' %>
      </td>
    </tr>
    <tr>
      <td>
        <%= form.label :crop_id, "作物の種類", class: 'form-label' %>
        <%= form.select :crop_id, Crop.all.pluck(:title, :id), include_blank: true, class: 'form-control' %>
      </td>
      <td>
        <%= form.label :category_id, "カテゴリーの種類", class: 'form-label' %>
        <%= form.select :category_id, Category.all.pluck(:title, :id), include_blank: true, class: 'form-control' %>
      </td>
    </tr>
  </table>
  <div class="text-center mt-3">
    <%= form.submit "検索", class: 'btn btn-secondary btn-lg' %>
  </div>
<% end %>

<table class="table table-striped data-list mt-3" style="max-width: 85%;">
  <thead style="color: #edefef; background-color: #df4c4c;">
    <tr>
      <th>タイトル</th>
      <th>カテゴリー</th>
      <th>作物の種類</th>
      <th>登録日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @trainings.each do |training| %>
      <tr>
        <td><%= training.title %></td>
        <td><%= training.category.title %></td>
        <td><%= training.crop.title %></td>
        <td><%= training.updated_at.strftime('%Y-%m-%d %H:%M') %></td>
        <td><%= link_to '詳細', training, class: 'btn btn-primary btn' %></td>
        <td><%= link_to '編集', edit_training_path(training), class: 'btn btn-warning btn' %></td>
        <td><%= link_to '削除', training, method: :delete, data: { confirm: '削除しますがよろしいですか?' }, class: 'btn btn-danger btn' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="table-pagination">
  <%= paginate @trainings, theme: 'twitter-bootstrap-4' %>
</div>
