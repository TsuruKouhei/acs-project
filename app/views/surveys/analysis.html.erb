<h1>アンケート分析</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>カテゴリー</th>
      <th>累計質問数</th>
    </tr>
  </thead>
  <tbody>
    <% @category_rankings.each_with_index do |category_ranking, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= link_to category_ranking.category_title, surveys_path(q: { category_id_eq: category_ranking.category_id }) %></td>
        <td><%= category_ranking.surveys_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th></th>
      <th>作物の種類</th>
      <th>累計質問数</th>
    </tr>
  </thead>
  <tbody>
    <% @crop_rankings.each_with_index do |crop_ranking, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= link_to crop_ranking.crop_title, surveys_path(q: { crop_id_eq: crop_ranking.crop_id }) %></td>
        <td><%= crop_ranking.surveys_count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
