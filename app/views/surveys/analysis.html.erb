<h1 class="text-center">アンケート分析</h1>

<div class="ranking-container mt-4" style="max-width: 25%;">
  <table class="table table-striped">
    <thead style="background-color: #facaaa;">
      <tr>
        <th></th>
        <th>カテゴリー</th>
        <th>累計質問数</th>
      </tr>
    </thead>
    <tbody>
      <% @category_rankings.each_with_index do |category_ranking, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to category_ranking.category_title, surveys_path(q: { category_id_eq: category_ranking.category_id }) %></td>
          <td><%= category_ranking.surveys_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="ranking-container mt-4" style="max-width: 25%;">
